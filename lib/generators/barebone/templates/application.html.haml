!!! 5
%html
  %head
  %title application_name
  = stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
  = javascript_include_tag "application", "data-turbolinks-track" => true
  = csrf_meta_tags

  %body
    %nav.navbar.navbar-default{role: "navigation"}
      / Brand and toggle get grouped for better mobile display
      .navbar-header
        %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        =link_to application_name, root_path , class: "navbar-brand"
      / Collect the nav links, forms, and other content for toggling
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        %ul.nav.navbar-nav.navbar-right
          - if current_user
            %li= link_to "Dashboard", dashboard_path
            %li= link_to "Edit Profile", edit_user_path(current_user.id)
            %li= link_to "Logout", :logout
          - else
            %li= link_to "Register", new_user_path
            %li= link_to "Login", :login
      / /.navbar-collapse
    .container
      - if content_for?(:content)
        = yield(:content)
      - else
        = yield
